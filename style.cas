body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background-color: #f3f4f6;
  color: #111827;
}

.container {
  max-width: 600px;
  margin: 2rem auto;
  padding: 2rem;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
  text-align: center;
}

img.profile-pic {
  width: 20px;
  height: 20px;
  object-fit: cover;
  border-radius: 50%;
  border: 3px solid #3b82f6;
}

h1 {
  margin: 1rem 0 0.5rem;
}

.section {
  text-align: left;
  margin-top: 2rem;
}

.section h2 {
  margin-bottom: 0.5rem;
  color: #2563eb;
}

ul {
  list-style: disc;
  padding-left: 1.5rem;
}
